<h1>Assessments</h1>
<section class="ui raised segment">
    <table class="ui ten column table">
        <thead>
        <tr>
            <th>Date</th>
            <th>Weight(kg)</th>
            <th>Chest</th>
            <th>Thigh</th>
            <th>Upper Arm</th>
            <th>Waist</th>
            <th>Hips</th>
            <th>Trend</th>
            <th>Comment</th>
            <th> </th>
        </tr>
        </thead>
        <tbody>
        {{#each user.assessments}}
            <tr>
                <td> {{date}} </td>
                <td> {{weight}} </td>
                <td> {{chest}} </td>
                <td> {{thigh}} </td>
                <td> {{upperArm}} </td>
                <td> {{waist}} </td>
                <td> {{hips}} </td>
                <td> {{comment}} </td>
                <td> {{trend}} </td>
                <td> <a href="/dashboard/deleteAssessment/{{id}}" class="ui icon button"><i class="trash icon"></i></a></td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</section>