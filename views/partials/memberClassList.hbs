<h1>Classes</h1>
<section class="ui raised segment">
    {{#each classList}}
        <table class="inverted blue ui six column table">
            <thead>
            <tr>
                <th>Class Name</th>
                <th>Duration</th>
                <th>Capacity</th>
                <th>Difficulty</th>
                <th>Enroll All</th>
                <th>Unenroll All</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td> {{className}} </td>
                <td> {{duration}} </td>
                <td> {{capacity}} </td>
                <td> {{difficulty}} </td>
                <td> <a href="/classes/enrollInAllClasses/{{classId}}" class="ui icon button"><i class="add user icon"></i></a></td>
                <td> <a href="/classes/unenrollInAllClasses/{{classId}}" class="ui icon button"><i class="remove user icon"></i></a></td>
            </tr>
            </tbody>
        </table>

        <details>
            <summary> View {{className}} Classes </summary>
            {{#each class}}
                <table class="ui blue seven column table" >
                    <thead>
                    <tr>
                        <th>Capacity</th>
                        <th>Current Capacity</th>
                        <th>Start Time</th>
                        <th>Date</th>
                        <th>Enrolled</th>
                        <th>Enroll One</th>
                        <th>Unenroll One</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td> {{capacity}} </td>
                        <td> {{currentCapacity}} </td>
                        <td> {{time}} </td>
                        <td> {{classDate}} </td>
                        <td> </td>
                        <td> <a href="/classes/{{../classId}}/enrollInExClass/{{exClassid}}" class="ui icon button"><i class="add user icon"></i></a></td>
                        <td> <a href="/classes/{{../classId}}/unenrollInExClass/{{exClassid}}" class="ui icon button"><i class="remove user icon"></i></a></td>
                    </tr>
                    </tbody>
                </table>
            {{/each}}
        </details>
    {{/each}}
</section>