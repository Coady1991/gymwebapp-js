<div class="ui two column grid basic middle aligned segment">
    <div class="column">
        <section class="ui raised segment">
            <h2>
                Update Profile
            </h2>
            <form class="ui raised segment form" action="/updateprofile/setFirstName" method="POST">
                <div class="field">
                    <label>First Name</label>
                    <div class="field">
                        <input placeholder="{{user.firstName}}" type="text" name="firstName" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setLastName" method="POST">
                <div class="field">
                    <label>Last Name</label>
                    <div class="field">
                        <input placeholder="{{user.lastName}}" type="text" name="lastName" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setGender" method="POST">
                <div class="field">
                    <label>Gender</label>
                    <div class="field">
                        <input type="radio" name="gender" value="Male" checked>Male<br>
                        <input type="radio" name="gender" value="Female">Female<br>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setEmail" method="POST">
                <div class="field">
                    <label>Email</label>
                    <div class="field">
                        <input placeholder="{{user.email}}" type="email" name="email" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setPassword" method="POST">
                <div class="field">
                    <label>Password</label>
                    <div class="field">
                        <input placeholder="{{user.password}}" type="text" name="password" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setAddress" method="POST">
                <div class="field">
                    <label>Address</label>
                    <div class="field">
                        <input placeholder="{{user.address}}" type="text" name="address" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setHeight" method="POST">
                <div class="field">
                    <label>Height (M)</label>
                    <div class="field">
                        <input placeholder="{{user.height}}" type="number" min="1.00" max="3.00" step="0.01" name="height" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
            <form class="ui raised segment form" action="/updateprofile/setWeight" method="POST">
                <div class="field">
                    <label>Weight (kg)</label>
                    <div class="field">
                        <input placeholder="{{user.weight}}" type="number" type="number" min="35" max="250" step="0.01" name="weight" required>
                    </div>
                    <button class="ui blue submit button">Submit</button>
                </div>
            </form>
        </section>
    </div>

    <div class="column">
        <img class="ui image" src="http://res.cloudinary.com/coady91/image/upload/v1504786722/profile_zcjzym.jpg">
