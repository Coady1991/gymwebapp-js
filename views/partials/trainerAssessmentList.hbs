<h1>Assessments</h1>
<section class="ui raised segment">
    {{#each user.assessments}}
        <table class="ui ten column table">
            <thead>
            <tr>
                <th>Date</th>
                <th>Weight(kg)</th>
                <th>Chest</th>
                <th>Thigh</th>
                <th>Upper Arm</th>
                <th>Waist</th>
                <th>Hips</th>
                <th>Trend</th>
                <th>Comment</th>
                <th> </th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td> {{date}} </td>
                <td> {{weight}} </td>
                <td> {{chest}} </td>
                <td> {{thigh}} </td>
                <td> {{upperArm}} </td>
                <td> {{waist}} </td>
                <td> {{hips}} </td>
                <td> {{trend}} </td>
                <td> {{comment}} </td>
                <td> <a href="" class="ui icon button"><i class="trash icon"></i></a></td>
            </tr>
            </tbody>
        </table>

        <form class="ui form" action="" method="POST">
            <div class="field">
                <label>Comment</label>
                <input placeholder="Comment" type="text" name="comment">
            </div>
            <div class="field">
                <button class="ui blue submit button">Submit</button>
            </div>
        </form>
    {{/each}}
</section>